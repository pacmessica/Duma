<section class="container add-article-form">
  <div class="row text-center">
    <h1>Add a new text</h1>
  </div>

    <%= form_for [@article] do |f| %>
      <div class="row text-center title">
        <%= f.label :title %>
        <%= f.text_field :title, size: "60" %>
      </div>

      <div class="row text-center image">
        <%= f.label "Image URL" %>
        <%= f.text_field :image, size: "60" %>
      </div>

      <div class="row text-center text">
        <%= f.label "text", class: "new-article-content" %>
        <%= f.text_area :content, size: "58x12" %>
      </div>

      <div class="row text-center source">
        <%= f.label :source %>
        <%= f.text_field :source, size: "60" %>
      </div>

      <div class="row text-center">
        <%= f.submit "Add", class: "new-article-btn" %>
      </div>

    <% end %>
</section>
